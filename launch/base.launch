<?xml version="1.0"?>
<launch>
  <arg name="world_name" default="cube" />
  <arg name="gui" default="true" />
  <arg name="run_camera" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find cube_gazebo)/worlds/$(arg world_name).world"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
  <param name="robot_description" command="$(find xacro)/xacro '$(find cube_gazebo)/urdf/cube_base.xacro'" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="cube_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model cube -z 0.05" />

  <!-- ros_control cube launch file -->
  <include file="$(find cube_gazebo)/launch/cube_control.launch" ns="/"/>

  <!-- priority-based command multiplexer -->
  <arg name="cube_version" default="cube-v1" />
  <include file="$(find ackermann_cmd_mux)/launch/standalone.launch" ns="vesc">
    <arg name="nodelet_manager_name" value="ackermann_cmd_mux_nodelet_manager" />
    <arg name="config_file" value="$(find cube_gazebo)/config/$(arg cube_version)/mux.yaml" />
  </include>
</launch>
